<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.Nav" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textSize">@dimen/_16ssp</item> <!-- Text size -->
        <item name="android:textColor">@color/white</item> <!-- Text color -->
        <item name="android:fontFamily">@font/muli_black</item> <!-- Font family -->
    </style>

    <style name="EditViewStyle">
        <item name="android:textSize">16sp</item> <!-- Text size -->
        <item name="android:textColorHint">@color/white</item> <!-- Text color -->
        <item name="android:fontFamily">@font/muli_black</item>
        <item name="android:textColor">@color/white</item> <!-- Font family -->
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">@dimen/_14ssp</item> <!-- Text size -->
        <item name="android:textColor">@color/black</item> <!-- Text color -->
        <item name="android:fontFamily">@font/muli_black</item> <!-- Font family -->
    </style>

    <style name="TextViewStyle2">
        <item name="android:textSize">@dimen/_14ssp</item> <!-- Text size -->
        <item name="android:textColor">@color/black</item> <!-- Text color -->
        <item name="android:fontFamily">@font/muli_extralight</item> <!-- Font family -->
    </style>

    <style name="CustomSnackbarText" parent="android:Widget.TextView">
        <item name="android:textSize">16sp
        </item> <!-- Change the text size as per your requirement -->
        <item name="android:fontFamily">@font/muli_black
        </item> <!-- Replace "your_custom_font" with the font you want to use -->
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/muli_black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarAppearance">
        <item name="cornerRadius">40dp</item>
    </style>

</resources>